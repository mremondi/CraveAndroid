<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTheme" parent="AppTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:color">@color/titleColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleTheme" parent="TitleTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NormalTextTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:color">#6e4c34</item>
    </style>

    <style name="NormalTextThemeBold" parent="NormalTextTheme">
        <item name="android:textStyle">bold</item>
    </style>


</resources>
