<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTheme" parent="AppTheme">
        <item name="android:textSize">34sp</item>
        <item name="android:color">@color/titleColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SplashTitleTheme" parent="AppTheme">
        <item name="android:textSize">72sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleTheme" parent="TitleTheme">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NormalTextTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:color">#6e4c34</item>
    </style>

    <style name="NormalTextThemeBold" parent="NormalTextTheme">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InAppButtonStyle" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="LoginButtonStyle" parent="InAppButtonStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="RowStyle" parent="AppTheme">
        <item name="android:padding">10dp</item>
    </style>



    <style name="RatingBar" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>
